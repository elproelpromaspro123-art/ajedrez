{
  "name": "freechess",
  "version": "1.0.0",
  "engines": {
    "node": ">=20 <25"
  },
  "dependencies": {
    "chess.js": "^1.0.0-beta.6",
    "compression": "^1.8.1",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "pg": "^8.19.0",
    "pgn-parser": "^2.2.0"
  },
  "scripts": {
    "dev": "npm run build && nodemon dist/index.js",
    "start": "node dist/index.js",
    "build": "tsc && node scripts/build-static.mjs",
    "typecheck": "tsc --noEmit",
    "lint": "npm run typecheck",
    "test": "tsc && node dist/test/reports.js",
    "test:e2e": "playwright test",
    "test:e2e:headed": "playwright test --headed"
  },
  "devDependencies": {
    "@playwright/test": "^1.58.2",
    "@types/compression": "^1.8.1",
    "@types/pg": "^8.16.0",
    "@types/express": "^4.17.21",
    "@types/pgn-parser": "^2.1.3",
    "esbuild": "^0.25.11",
    "nodemon": "^3.0.3",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3"
  }
}
